{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "webAppName": {
            "type": "string"
        },
        "webFarmName": {
            "type": "string"
        },
        "appInsightsInstrumentationKey": {
            "type": "string"
        },
        "clientSecretProd": {
            "type": "securestring"
        },
        "clientSecretTest": {
            "type": "securestring"
        },
        "clientIdProd": {
            "type": "string"
        },
        "clientIdTest": {
            "type": "string"
        },
        "projectName": {
            "type": "string"
        },
        "vaultNameProd": {
            "type": "string"
        },
        "vaultNameTest": {
            "type": "string"
        }
    },
    "variables": {
        "location": "[resourceGroup().location]",
        "webDeployUser": "rainer",
        "netFramework": "4.6"
    },
    "resources": [
        {
            "name": "[parameters('webAppName')]",
            "type": "Microsoft.Web/sites",
            "apiVersion": "2016-08-01",
            "location": "[variables('location')]",
            "tags": {
                "Project": "[parameters('projectName')]",
                "Tier": "Web"
            },
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms/', parameters('webFarmName'))]",
                "siteConfig": {
                    "defaultDocuments": [
                        "default.html"
                    ],
                    "netFrameworkVersion": "[variables('netFramework')]",
                    "publishingUsername": "[variables('webDeployUser')]",
                    "appSettings": [
                        {
                            "name": "ApplicationInsights:InstrumentationKey",
                            "value": "[if(empty(parameters('appInsightsInstrumentationKey')), parameters('appInsightsInstrumentationKey'), json('null'))]"
                        },
                        {
                            "name": "KeyVault:VaultName",
                            "value": "[parameters('vaultNameProd')]"
                        },
                        {
                            "name": "KeyVault:ClientID",
                            "value": "[parameters('clientIdProd')]"
                        },
                        {
                            "name": "KeyVault:ClientSecret",
                            "value": "[parameters('clientSecretProd')]"
                        }
                    ],
                    "use32BitWorkerProcess": false,
                    "webSocketsEnabled": true,
                    "alwaysOn": true,
                    "cors": {
                        "allowedOrigins": [
                            "*"
                        ]
                    }
                }
            },
            "resources": [
                {
                    "name": "slotConfigNames",
                    "type": "config",
                    "apiVersion": "2015-08-01",
                    "dependsOn": [
                        "[concat(parameters('webAppName'), '/test')]"
                    ],
                    "tags": {
                        "displayName": "slotConfigNames"
                    },
                    "properties": {
                        "appSettingNames": [
                            "KeyVault:VaultName",
                            "KeyVault:ClientID",
                            "KeyVault:ClientSecret"
                        ]
                    }
                }
            ]
        },
        {
            "name": "[concat(parameters('webAppName'), '/test')]",
            "type": "Microsoft.Web/sites/slots",
            "apiVersion": "2016-08-01",
            "location": "[variables('location')]",
            "tags": {
                "Project": "[parameters('projectName')]",
                "Tier": "Web"
            },
            "dependsOn": [
                "[parameters('webAppName')]"
            ],
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms/', parameters('webFarmName'))]",
                "siteConfig": {
                    "defaultDocuments": [
                        "default.html"
                    ],
                    "netFrameworkVersion": "[variables('netFramework')]",
                    "publishingUsername": "[variables('webDeployUser')]",
                    "appSettings": [
                        {
                            "name": "ApplicationInsights:InstrumentationKey",
                            "value": "[if(empty(parameters('appInsightsInstrumentationKey')), parameters('appInsightsInstrumentationKey'), json('null'))]"
                        },
                        {
                            "name": "KeyVault:VaultName",
                            "value": "[parameters('vaultNameTest')]"
                        },
                        {
                            "name": "KeyVault:ClientID",
                            "value": "[parameters('clientIdTest')]"
                        },
                        {
                            "name": "KeyVault:ClientSecret",
                            "value": "[parameters('clientSecretTest')]"
                        }
                    ],
                    "use32BitWorkerProcess": false,
                    "webSocketsEnabled": true,
                    "alwaysOn": true,
                    "cors": {
                        "allowedOrigins": [
                            "*"
                        ]
                    }
                }
            },
            "resources": [
                {
                    "name": "slotConfigNames",
                    "type": "config",
                    "apiVersion": "2015-08-01",
                    "dependsOn": [
                        "[concat(parameters('webAppName'), '/test')]"
                    ],
                    "tags": {
                        "displayName": "slotConfigNames"
                    },
                    "properties": {
                        "appSettingNames": [
                            "KeyVault:VaultName",
                            "KeyVault:ClientID",
                            "KeyVault:ClientSecret"
                        ]
                    }
                }
            ]
        }
    ],
    "outputs": {}
}