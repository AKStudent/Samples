<Page
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"> 
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <Ellipse Grid.Column="0" Grid.Row="0" Fill="Gray" Stroke="Black" />
    <Rectangle Grid.Column="1" Grid.Row="0" Fill="Gray" Stroke="Black" />

    <Rectangle Grid.Column="0" Grid.Row="1" Fill="Gray" Stroke="Black" />
    <Ellipse Grid.Column="1" Grid.Row="1" Fill="Gray" Stroke="Black" />
  </Grid>
</Page>
