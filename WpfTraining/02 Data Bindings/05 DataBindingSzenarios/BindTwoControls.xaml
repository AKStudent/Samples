<Page x:Class="Samples.BindTwoControls"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="BindTwoControls"
    >
    <Grid>
		<StackPanel>
			<TextBox x:Name="Input1" Text="Test1"/>
			<TextBox x:Name="Input2" IsEnabled="false"
			  Text="{Binding ElementName=Input1, Path=Text}"/>
		</StackPanel>
	</Grid>
</Page>
